#
# Domain of text editor/viewer on mobile:
# * Medium (display with touch cap.).
# * Text on display, brightness, frame.
# * Visible and invisible characters and symbols.
# * Masses of characters forming text.
# * Blocks of text forming meaning.
# * Clumsy interface ant text orientation.
# * Small display.
# * Word wrap.
# * Small variance in font size.
# * Short lines.
# * Whitespace has most contrast.
#
# Domain of configuration:
# * Connections, hierarchies.
# * Free interpretation (interpretation of meaning).
# * Blocks of text.
# * Meaning of words, grammar hints.
# * Commonness and alienation.
# * Static and dynamic forms (interpretation of interpretation).
# * Order and side.  
# * Validity.
#
# Domain of target format (HTML):
# * Blocks of text.
# * Tags, attributes.
# * Relations.
# * Whitespace.
# * Validity.
# 

@ReplaceRules {
	# Escpae curly bracers.
	replaces {\\\}} {\&#125;}
	replaces {\\\{} {\&#123;}
	# Escpae brackets.
	replaces {\\\]} {\&#93;}
	replaces {\\\[} {\&#91;}
	# Escpae dollar sign.
	replaces {\\\$} {\&#36;}
}

@ReplaceLinks {
	# If you want to multi-word links: <a href='$links(0)'>Necto Mono</a> 
	
	# Reference links: ?word?[referenceNumber]
	replaces {([\w_-]+)\{(\d+)\}} {<a href="$links(\2)">\1</a>}
	replaces {\{(\d+)\}} {<a href="$links(\1)">$links(\1)</a>}
	# Plain links: ?word?[url]
	replaces {([\w_-]+)\{([^\{\}]*)\}} {<a href="\2">\1</a>}
	replaces {\{([^\{\}]*)\}} {<a href="\1">\1</a>}
}

# Come up with ESCAPE synt.

Headline {
	matches {
		{^.+$} to match
		{^-+$} to _
	}

	oneoff
	exact
	
	prints {
		<h1>$match</h1>
	}
}

Title {
	exact
	
	matches {
		{^.+$} to match
		{^-+$} to _
	}

	prints {
		<h2>$match</h2>
	}
}

Section {
	starts {&&&}
	Document {
		prints {
			$content
		}
	}
	ends {&&&}

	multiline

	prints {
		<section>
		$content
		</section>
	}
}

Html {
	multiline 
	
	matches {^<.+>$}
	
	when matched {
		matches {^\s*<.+>$}
	}

	when completed {
		
		#
		# Resets back.
		#
		
		matches {^<.+>$}
	}

	prints {
		$match
	}
}

Code {
	multiline
	
	matches {
		{^\tCaption:\s(.+)} to caption
		{^\t(.*)} to match
	}	
	
	@ReplaceRules 
	@ReplaceLinks 
	
	prints {
		<figure>
		<pre>
		<code>$match</code>
		</pre>
		<figcaption>$caption</figcaption>
		</figure>
	}
}

OrderedList {
	multiline
	
	matches {^\d\.\ (.+)}

	@ReplaceLinks
	
	prints {
		<ol>
		<li>$match</li>
		</ol>
	}
}

UnorderedList {
	multiline
	
	matches {^-\ (.+)}
	
	@ReplaceLinks

	prints {
		<ul>
		<li>$match</li>
		</ul>
	}
}

Details {
	starts {^>+\ (.+)$}
	Document {
		prints {
			$content
		}
	}
	ends {^>+$}

	prints {
		<details>
		<summary>$match</summary>
		$content
		</details>
	}
}

Quote {
	starts {^"$}
	Paragraph {}
	ends {^"\ ?(.+)?$}

	prints {
		<figure>
		<blockquote>
		$content
		</blockquote>
		<figcaption>$match</figcaption>
		</figure>
	}
}

Image {
	matches {
		{^\{(.+\.(?:png|jpg|jpeg|gif|webp)),\ (.+)\}} to src caption
		{^\{(.+\.(?:png|jpg|jpeg|gif|webp))\}} to src
	}	

	@ReplaceLinks 
	
	prints {	
		<figure>
		<img src="$src"></img>
		<figcaption>$caption</figcaption>
		</figure> 
	}
}

Video {
	matches {
		{^\{(.+\.(?:mp4|mov)),\ (.+)\}} to src caption
		{^\{(.+\.(?:mp4|mov))\}} to src
	}	

	@ReplaceLinks 
	
	prints {	
		<figure>
			<video controls="" autoplay="" muted="" loop="" playsinline="">
			<source type="video/mp4" src="$src">
			</video>
			<figcaption>$caption</figcaption>
		</figure>
	}
}


Link {
	matches {^\{(\d+)\}\s*(.*)$}

	exports links
	
	when matched {
		debug::puts "1337"	
	}
	
	do {
		set links($1) $2
	}
}

Hr {
	matches {^\*\*\*$}

	prints {
		<hr>
	}
}

Paragraph {
	multiline
	
	matches {.+}

	@ReplaceRules
	@ReplaceLinks
	
	# Quote.
	replaces {"([\wâ€¦\ ,']+)"} {<q>\1</q>}

	prints {
		<p>
		$match
		</p>
	}
}

